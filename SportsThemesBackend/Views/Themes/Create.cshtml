@model SportsThemesBackend.Models.Theme

@{
    ViewData["Title"] = "Create New Theme";
}

<h1>Create New Theme</h1>

<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h4>New Theme</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyColour" class="control-label"></label>
                <input asp-for="BodyColour" class="form-control" type="color" />
                <span asp-validation-for="BodyColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ListBackgroundColour" class="control-label"></label>
                <input asp-for="ListBackgroundColour" class="form-control" type="color" />
                <span asp-validation-for="ListBackgroundColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextColour" class="control-label"></label>
                <input asp-for="TextColour" class="form-control" type="color" />
                <span asp-validation-for="TextColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonTextColour" class="control-label"></label>
                <input asp-for="ButtonTextColour" class="form-control" type="color" />
                <span asp-validation-for="ButtonTextColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonBackgroundColour" class="control-label"></label>
                <input asp-for="ButtonBackgroundColour" class="form-control" type="color" />
                <span asp-validation-for="ButtonBackgroundColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkTextColour" class="control-label"></label>
                <input asp-for="LinkTextColour" class="form-control" type="color" />
                <span asp-validation-for="LinkTextColour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkOpacity" class="control-label"></label>
                <input asp-for="LinkOpacity" class="form-control" type="number" />
                <span asp-validation-for="LinkOpacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Font" class="control-label"></label>
                <select asp-for="Font" class ="form-control" asp-items="ViewBag.Fonts">
                    <option value='' selected>Select a Font</option>
                </select>
                <span asp-validation-for="Font" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderFontSize" class="control-label"></label>
                <select asp-for="HeaderFontSize" asp-items="Html.GetEnumSelectList<FontSize>()"></select>
                <span asp-validation-for="HeaderFontSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextFontSize" class="control-label"></label>
                <select asp-for="TextFontSize" asp-items="Html.GetEnumSelectList<FontSize>()"></select>
                <span asp-validation-for="TextFontSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Create New Theme" />
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

<hr />

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List of Themes</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
