@model IEnumerable<SportsThemesBackend.Models.Theme>

@{
    ViewData["Title"] = "List of Themes";
}

<h1>List of Themes</h1>

<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Theme</a>
</p>

<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Font)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="font-family: @item.Font">
                    @Html.DisplayFor(modelItem => item.Font)
                </td>
                <td>
                    <img style="width: 50px" src="@Url.Content(item.Logo)">
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
