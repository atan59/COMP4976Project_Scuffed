@model IEnumerable<SportsThemesBackend.Models.Theme>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListBackgroundColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ButtonTextColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ButtonBackgroundColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkTextColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkOpacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Font)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderFontSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextFontSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ButtonTextColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ButtonBackgroundColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkTextColour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinkOpacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Font)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeaderFontSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextFontSize)
                </td>
                <td>
                    <img style="width: 100px" src="@Url.Content(item.Logo)">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
