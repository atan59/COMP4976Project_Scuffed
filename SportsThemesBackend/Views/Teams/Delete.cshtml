@model SportsThemesBackend.Models.Team

@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<hr />

<div>
    <h4><strong>@Model.TeamName</strong></h4>

    <p>Are you sure you want to delete the following team: <strong>@Model.TeamName</strong>?</p>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoachId)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CoachName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThemeId)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ThemeName
        </dd>
    </dl>

    <hr />

    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamName" />
        <input class="btn btn-danger" type="submit" value="Delete Team" />
        <a class="btn btn-dark" asp-action="Index">Back to List of Teams</a>
    </form>
</div>
