@model IEnumerable<SportsThemesBackend.Models.Team>

@{
    ViewData["Title"] = "List of Teams";
}

<h1>List of Teams</h1>

<hr />

<dl class="row">
    <dt class="col-sm-2">
        Coaches Information
    </dt>
    <dd class="col-sm-10">
        <p>You currently have <strong>@ViewBag.NumOfCoaches coach user/s</strong> without an assigned team.</p>
    </dd>
</dl>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Team</a>
</p>

<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThemeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @ViewBag.CoachNames[item.CoachId]
                </td>
                <td>
                    @ViewBag.ThemeNames[item.ThemeId]
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TeamName">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TeamName">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TeamName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
